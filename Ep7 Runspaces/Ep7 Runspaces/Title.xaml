<Page x:Class="Basic_Wizard.Title"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Basic_Wizard"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="525"
      Title="Title">

    <Grid x:Name="TitlePage">
        <Button x:Name="TitleButtonCancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,10.333,10" VerticalAlignment="Bottom" Width="75" IsCancel="True"/>
        <Button x:Name="TitleButtonNext" Content="Next" HorizontalAlignment="Right" Margin="0,0,90.333,10" VerticalAlignment="Bottom" Width="75"/>
        <Button x:Name="titleButton" Content="Start-Sleep" HorizontalAlignment="Left" Margin="285,123,0,0" VerticalAlignment="Top" Width="77" Height="23"/>
        <TextBox x:Name="titleTextBox" HorizontalAlignment="Left" Height="23" Margin="112,123,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="titleTextBlock" HorizontalAlignment="Left" Margin="112,182,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" FontSize="18"/>
    </Grid>
</Page>
